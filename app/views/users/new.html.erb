<div class="container first-content">
  <div class="row">
    <div class="col-lg-5 col-md-6 col-sm-7 col-xs-11 col-centered content form">
      <p>
        We're still getting ready to open up shop, and we can't wait to show you our first product.
        Sign up to be first in line to order!
      </p>

      <% unless flash[:success] %>
        <%= form_for @user do |f| %>
          <div class="form-group">
            <label>First name</label>
            <%= f.text_field :first_name, placeholder: 'First name', class: "form-control" %>
          </div>

          <div class="form-group">
            <label>Last name</label>
            <%= f.text_field :last_name, placeholder: 'Last name', class: "form-control" %>
          </div>

          <div class="form-group">
            <label>Email</label>
            <%= f.text_field :email, placeholder: 'Email', class: "form-control" %>
          </div>

          <div class="form-group text-center">
            <%= button_tag(class: 'buttn submit thick') do %>
              <i class='fa fa-envelope-o'></i>
            <% end %>
          </div>
        <% end %>
      <% end %>

      <%= render 'shared/flash' %>
    </div>
  </div>
</div>
