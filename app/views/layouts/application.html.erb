<!DOCTYPE html>
<html>
<head>
  <title>Meadowbox</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <i class="fa fa-<%= alert_icon(key) %>" aria-hidden="true"></i> <%= value %>
    </div>
  <% end %>
</div>

</body>
</html>
